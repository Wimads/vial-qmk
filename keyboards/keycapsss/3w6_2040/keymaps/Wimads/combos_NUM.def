COMB(NUM_DEL,       KC_DEL,         KC_RBRC, KC_HASH)
COMB(NUMrDEL,       KC_DEL,         KC_ASTR, KC_1)

COMB(NUM_CKB,       CLEARKB,        KC_AT,   DH_TILD) //@~ Clear keyboard
COMB(NUMrCKB,       CLEARKB,        DH_CIRC, KC_PERC) //^% Clear keyboard

//modifiers:
COMB(NUM_SC,        S(KC_LCTL),     UND_SFT, KC_LCTL)
COMB(NUM_SA,        S(KC_LALT),     UND_SFT, KC_LALT)
