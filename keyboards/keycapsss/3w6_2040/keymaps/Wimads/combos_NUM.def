COMB(NUM_TAB,       KC_TAB,         KC_4,    KC_5,    KC_6)    //456 TAB, useful for locked numpad layer

COMB(NUM_COM,       KC_COMMA,       KC_1,    KC_2)             //12  Comma
COMB(NUM_DOT,       KC_DOT,         KC_2,    KC_3)             //23  Dot
COMB(NUM_EQL,       KC_EQL,         KC_LT,   KC_GT)
COMB(NUM_MINS,      KC_MINS,        KC_LPRN, KC_RPRN)

COMB(NUM_BSP,       KC_BSPC,        KC_RPRN, KC_GRV)
